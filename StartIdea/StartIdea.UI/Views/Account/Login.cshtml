@model StartIdea.UI.ViewModels.LoginVM

@{
    ViewBag.Title = "Login";
}

@section CustomScript{
    <script>
        $(function () {
            $("#lnkEsqueciSenha").click(function (e) {
                e.preventDefault();
                $("#form-recupera-senha").animate({
                    left: "+=50",
                    height: "toggle"
                }, 500);
            });
        })
    </script>
}

<div class="container form-login">
    @using (Html.BeginForm())
    {
        <h2 class="form-login-heading">Login</h2>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-xs-12">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "E-mail" } })
                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @placeholder = "Senha" } })
            </div>
            <div class="col-xs-12">
                @Html.CheckBoxFor(model => model.PermanecerConectado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.LabelFor(model => model.PermanecerConectado)
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary btn-block">Entrar</button>
    }
    <div class="esqueci-senha">
        <a href="#" id="lnkEsqueciSenha">Esqueci minha senha</a>
    </div>
    <form id="form-recupera-senha" class="form-recuperar-senha">
        <label for="emailRecuperaSenha" class="sr-only">Email</label>
        <input type="email" id="emailRecuperaSenha" class="form-control" placeholder="Email" required="">
        <button class="btn btn-lg btn-primary btn-block btn-enviar-email" type="submit">Enviar</button>
    </form>
</div>