@model StartIdea.UI.Areas.ScrumMaster.ViewModels.SprintBacklogVM

<div class="modal fade" tabindex="-1" role="dialog" id="popup-motivo-cancelamento">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Remover", "SprintBacklog"))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.paginaProductBacklog)
                @Html.HiddenFor(model => model.paginaSprintBacklog)

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel">Editar Backlog do Produto</h4>
                </div>

                <div class="modal-body">
                    <div class="container-fluid">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="row">
                            <div class="col-xs-12 form-group">
                                @Html.LabelFor(model => model.MotivoCancelamento)
                                @Html.EditorFor(model => model.MotivoCancelamento, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MotivoCancelamento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="reset" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            }
        </div>
    </div>
</div>
