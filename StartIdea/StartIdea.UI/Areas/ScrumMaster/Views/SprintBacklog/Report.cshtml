@model StartIdea.UI.Areas.ScrumMaster.ViewModels.SprintBacklogVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body onload="window.print()">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-header">
                    <h1>Backlog da Sprint</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <label>Sprint: </label>
                @Html.DisplayFor(model => model.SprintId) - @ViewBag.ObjetivoSprint
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="col-sm-2 col-md-1 text-center">Id</th>
                            <th>User Story</th>
                            <th class="col-sm-2 text-center">Story Point</th>
                            <th class="col-sm-1 text-center">Prioridade</th>
                            <th class="col-sm-2 text-center">Data Inclusão</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SprintBacklogReport)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.ProductBacklog.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductBacklog.UserStory)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.ProductBacklog.StoryPoint)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.ProductBacklog.Prioridade)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.ProductBacklog.DataInclusao)
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2">
                                <em>Quantidade de Registro: @Model.SprintBacklogReport.Count()</em>
                            </td>
                            <td class="text-right" colspan="3">
                                <em>Data de Impressão: @DateTime.Now</em>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <button type="button" class="btn btn-default hidden-print" onclick="window.print()">
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span> Imprimir
        </button>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>