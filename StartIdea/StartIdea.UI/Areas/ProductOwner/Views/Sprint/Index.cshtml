@model StartIdea.UI.Areas.ProductOwner.ViewModels.SprintVM

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-xs-12">
        <div class="page-header">
            <h1>Cancelamento da Sprint</h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="container-fluid">
        @if (Model.Id == 0)
        {
            <div class="row">
                <div class="col-xs-12">
                    <div class="alert alert-info" role="alert">
                        <p>Não há sprint em andamento.</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            using (Html.BeginForm("Edit", "Sprint", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="row">
                    <div class="col-xs-12 form-group">
                        <label>Objetivo</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.Objetivo)</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12 col-sm-4 form-group">
                        <label>Data Inicial</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.DataInicial)</p>
                    </div>
                    <div class="col-xs-12 col-sm-4 form-group">
                        <label>Data Final</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.DataFinal)</p>
                    </div>
                    <div class="col-xs-12 col-sm-4 form-group">
                        <label>Data de Cadastro</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.DataCadastro)</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12 form-group">
                        @Html.LabelFor(model => model.MotivoCancelamento)
                        @Html.EditorFor(model => model.MotivoCancelamento, new { htmlAttributes = new { @class = "form-control", @autofocus = "autofocus" } })
                        @Html.ValidationMessageFor(model => model.MotivoCancelamento, "", new { @class = "text-danger" })
                    </div>
                </div>

                <button type="submit" class="btn btn-danger" onclick="return confirm('Você tem certeza que deseja cancelar essa sprint?');">Cancelar Sprint</button>
            }
        }
    </div>
</div>